

<div class="container">
  <%= form_tag movies_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a movie"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="movies">
      <% if @movies.any? %>
        <% @movies.each do |movie| %>
          <h4><%= movie.searchable.title %></h4>
          <p><%= movie.searchable.synopsis %></p>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>